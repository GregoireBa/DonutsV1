{% extends "base.html.twig" %}

{% block body %}
<div class="box-login">
<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
{{form_start(userForm)}}

        {{form_label(userForm.email,'Email :', {'label_attr' : {'class' : 'mt-3'}})}}
        {{form_widget(userForm.email, {'attr' : {'class' : 'form-control input-login', 'placeholder' : 'Email'}})}}

        {{form_label(userForm.password,'Password :', {'label_attr' : {'class' : 'mt-3'}})}}
        {{form_widget(userForm.password, {'attr' : {'class' : 'form-control input-login', 'placeholder' : 'password'}})}}

        {{form_label(userForm.name,'name :', {'label_attr' : {'class' : 'mt-3'}})}}
        {{form_widget(userForm.name, {'attr' : {'class' : 'form-control input-login', 'placeholder' : 'name'}})}}

        {{form_label(userForm.firstname,'firstname :', {'label_attr' : {'class' : 'mt-3'}})}}
        {{form_widget(userForm.firstname, {'attr' : {'class' : 'form-control input-login', 'placeholder' : 'firstname'}})}}

        {{form_widget(userForm.Enregistrer, {'attr' : {'class' : 'btn btn-lg mt-3 btn-co btn-co-login',}})}}

{{form_end(userForm)}}
</div>
{% endblock %}