{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">

		<div class="mt-5">
		<a href="{{path('front_create_user')}}" class="btn-green btn-success">S'inscrire</a>
		</div>

		<table class="table">
			<thead class="tab-thead">
				<tr>
					<th class="br-thead-left" scope="col">ID</th>
					<th scope="col">Name</th>
					<th scope="col">Firstname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Code Postal</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Pays</th>
					<th class="br-thead-right" scope="col">Action</th>
				</tr>
			</thead>
			<tbody class="tab-tbody">
				{% for user in users %}
					<tr>
						<th scope="row">{{user.id}}</th>
						<td>{{user.name}}</td>
                        <td>{{user.firstname}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.telephone}}</td>
                        <td>{{user.adresse}}</td>
						<td>{{user.cp}}</td>
						<td>{{user.ville}}</td>
						<td>{{user.pays}}</td>
						<td>
							<a class="btn-action" href="{{ path('admin_delete_user', {'id' : user.id}) }}">
								<i class="fa-solid fa-trash-can"></i>
							</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
			<div class="footer-tab"></div>
	</div>
{% endblock %}
