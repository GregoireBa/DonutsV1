{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Titre</th>
					<th scope="col">Description</th>
					<th scope="col">Photo</th>
					<th scope="col">Prix</th>
					<th scope="col">Stock</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<th scope="row">{{produit.id}}</th>
						<td>{{produit.titre}}</td>
						<td>{{produit.description}}</td>
						<td><img class="img-tab" src="{{ asset("media/" ~ produit.photo) }}"></td>
						<td>{{produit.prix}}â‚¬</td>
						<td>{{produit.stock}}</td>
						<td>
							<a href="{{ path('admin_update_produit', {'id' : produit.id}) }}">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<a href="{{ path('admin_delete_produit', {'id' : produit.id}) }}">
								<i class="fa-solid fa-trash-can"></i>
							</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
    <div class="container"><a href="{{path('admin_create_produit')}}" class="btn btn-success">Ajouter un produit</a></div>
{% endblock %}
