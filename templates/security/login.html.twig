{% extends 'base.html.twig' %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="box-login">
    <h1 class="h1-30 pt-2">Connexion</h1>
    <label for="inputEmail" class="mt-3">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-login" autocomplete="email" required>
    
    <label for="inputPassword" class="mt-3">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control input-login" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg mt-3 btn-co btn-co-login" type="submit">
        Connexion
    </button>

    </div>
</form>
{% endblock %}
